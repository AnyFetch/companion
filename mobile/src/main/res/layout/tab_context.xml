<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <ImageView
        android:id="@+id/backgroundView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/primary_dark"
        android:contentDescription="@string/placeholder_event"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/abc_action_bar_default_height_material"
        android:layout_marginLeft="@dimen/abc_action_bar_default_height_material"
        android:layout_marginRight="@dimen/abc_action_bar_default_height_material"
        android:layout_marginStart="@dimen/abc_action_bar_default_height_material"
        android:layout_marginTop="@dimen/list_margin"
        android:gravity="top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleView"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_event"
            android:textColor="@color/primary_text_default_material_dark"/>

        <TextView
            android:id="@+id/infoView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_location"
            android:textColor="@color/primary_text_default_material_dark"/>
    </LinearLayout>

</FrameLayout>