<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="@dimen/card_padding"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/card_padding">

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ic_dt_size"
        android:scrollbars="none"/>

    <ImageView
        android:id="@+id/providerIcon"
        android:layout_width="@dimen/ic_dt_size"
        android:layout_height="@dimen/ic_dt_size"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/ic_dp_margin"
        android:contentDescription="Provider"/>


    <ImageView
        android:id="@+id/dtIcon"
        android:layout_width="@dimen/ic_dt_size"
        android:layout_height="fill_parent"
        android:layout_gravity="left|center_vertical"
        android:background="@android:color/darker_gray"/>

    <android.gesture.GestureOverlayView
        android:id="@+id/gestureOverlayView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    </android.gesture.GestureOverlayView>
</android.support.v7.widget.CardView>