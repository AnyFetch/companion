<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anyfetch.companion.wear" >

    <uses-feature android:name="android.hardware.type.watch" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.DeviceDefault" >

        <!-- # Entry points -->
        <!-- ## Upcoming events -->
        <activity
            android:name=".UpcomingEventsActivity"
            android:label="@string/title_activity_upcoming_events" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- ## Fake Notification -->
        <activity
            android:name=".FakeEventNotification"
            android:label="FakeEventNotification" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- ## Actual Notification -->
        <receiver
            android:name=".PostEventNotificationReceiver"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.anyfetch.companion.wear.SHOW_NOTIFICATION" />
            </intent-filter>
        </receiver>

        <!-- # Follow ups -->
        <!-- ## Event Grid -->
        <activity
            android:name=".EventGridActivity"
            android:label="@string/title_activity_event_grid"
            android:parentActivityName=".UpcomingEventsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.anyfetch.companion.wear.UpcomingEventsActivity" />
        </activity>
        <!-- ## Menus -->
        <activity
            android:name=".OpenDocumentMenuActivity"
            android:label="@string/title_activity_open_document_menu"
            android:parentActivityName=".EventGridActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.anyfetch.companion.wear.EventGridActivity" />
        </activity>

        <!-- Wear Activities -->
        <activity
            android:name="android.support.wearable.activity.ConfirmationActivity" >
        </activity>

    </application>

</manifest>
